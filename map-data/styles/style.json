{
  "version": 8,
  "name": "Basic",
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "mbtiles://{antananarivo}"
    }
  },
  "glyphs": "https://demotiles.maplibre.org/font/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f1f3f4"
      }
    },
    {
      "id": "landuse",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "antananarivo",
      "filter": [
        "any",
        [
          "has",
          "landuse"
        ],
        [
          "has",
          "leisure"
        ],
        [
          "has",
          "natural"
        ]
      ],
      "paint": {
        "fill-color": [
          "case",
          [
            "==",
            [
              "get",
              "landuse"
            ],
            "residential"
          ],
          "#e9e9e9",
          [
            "any",
            [
              "==",
              [
                "get",
                "leisure"
              ],
              "park"
            ],
            [
              "==",
              [
                "get",
                "landuse"
              ],
              "forest"
            ],
            [
              "==",
              [
                "get",
                "landuse"
              ],
              "grass"
            ]
          ],
          "#d8e8c8",
          [
            "==",
            [
              "get",
              "natural"
            ],
            "water"
          ],
          "#aadaff",
          "#eeeeee"
        ]
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "antananarivo",
      "filter": [
        "has",
        "building"
      ],
      "paint": {
        "fill-color": "#dcdcdc",
        "fill-outline-color": "#c0c0c0"
      }
    },
    {
      "id": "roads",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "antananarivo",
      "filter": [
        "has",
        "highway"
      ],
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": [
          "case",
          [
            "any",
            [
              "==",
              [
                "get",
                "highway"
              ],
              "motorway"
            ],
            [
              "==",
              [
                "get",
                "highway"
              ],
              "trunk"
            ],
            [
              "==",
              [
                "get",
                "highway"
              ],
              "primary"
            ]
          ],
          "#fec34d",
          "#ffffff"
        ],
        "line-width": [
          "interpolate",
          [
            "linear"
          ],
          [
            "zoom"
          ],
          12,
          0.5,
          14,
          3,
          18,
          12
        ]
      }
    },
    {
      "id": "place-labels",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "antananarivo",
      "filter": [
        "any",
        [
          "has",
          "place"
        ],
        [
          "==",
          [
            "get",
            "admin_level"
          ],
          "2"
        ],
        [
          "==",
          [
            "get",
            "admin_level"
          ],
          "4"
        ]
      ],
      "layout": {
        "text-field": "{name}",
        "text-font": [
          "Noto Sans Regular"
        ],
        "text-size": [
          "interpolate",
          [
            "linear"
          ],
          [
            "zoom"
          ],
          8,
          10,
          12,
          16
        ],
        "text-transform": "uppercase"
      },
      "paint": {
        "text-color": "#333333",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    },
    {
      "id": "road-labels",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "antananarivo",
      "filter": [
        "all",
        [
          "has",
          "name"
        ],
        [
          "has",
          "highway"
        ]
      ],
      "minzoom": 13,
      "layout": {
        "text-field": "{name}",
        "text-font": [
          "Noto Sans Regular"
        ],
        "text-size": 11,
        "symbol-placement": "line",
        "text-rotation-alignment": "map"
      },
      "paint": {
        "text-color": "#444444",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    },
    {
      "id": "poi-labels",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "antananarivo",
      "filter": [
        "all",
        [
          "has",
          "name"
        ],
        [
          "any",
          [
            "has",
            "amenity"
          ],
          [
            "has",
            "shop"
          ],
          [
            "has",
            "tourism"
          ]
        ]
      ],
      "minzoom": 15,
      "layout": {
        "text-field": "{name}",
        "text-font": [
          "Noto Sans Regular"
        ],
        "text-size": 10,
        "text-anchor": "top",
        "text-offset": [
          0,
          0.5
        ]
      },
      "paint": {
        "text-color": "#666666",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    }
  ]
}