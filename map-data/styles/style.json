{
  "version": 8,
  "name": "Basic",
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "mbtiles://{antananarivo}"
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f8f4f0"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "antananarivo",
      "filter": [
        "any",
        [
          "has",
          "natural"
        ],
        [
          "has",
          "waterway"
        ]
      ],
      "paint": {
        "fill-color": "#a0c8f0"
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "antananarivo",
      "filter": [
        "has",
        "building"
      ],
      "paint": {
        "fill-color": "#d0d0d0",
        "fill-outline-color": "#b0b0b0"
      }
    },
    {
      "id": "road",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "antananarivo",
      "filter": [
        "has",
        "highway"
      ],
      "paint": {
        "line-color": "#ffffff",
        "line-width": {
          "base": 1.55,
          "stops": [
            [
              10,
              0.5
            ],
            [
              18,
              10
            ]
          ]
        }
      }
    },
    {
      "id": "place",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "antananarivo",
      "filter": [
        "has",
        "place"
      ],
      "layout": {
        "text-field": "{name}",
        "text-size": 12
      },
      "paint": {
        "text-color": "#333333",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    }
  ]
}